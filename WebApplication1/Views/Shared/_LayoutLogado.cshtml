<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Cozinhow</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>

    @*<script src="@Url.Content(" ~/Scripts/bootstrap-dialog.js")" type="text/javascript"></script>*@

</head>
<body>

    <div class="navbar header navbar-fixed-top">
        <div class="container">
            <div class="row navbar-header">

                <div class="col-md-3">
                    <img src="~/Content/img/Logo-Home.png" class="size-logo-navbar" />
                </div>

                <div class="col-md-3 col-lg-offset-6" style="margin-top: 8px">                    
                    <a class="btn btn-default btn-block" href="#">
                        POSTAR
                    </a>
                </div>

            </div>

            <div class="navbar-collapse" style="float: right">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">
                            <i class="fa fa-user header-icon"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-home header-icon"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-bell header-icon"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <aside id="menu">
        <div class="profile-sidebar">
            <!-- SIDEBAR USERPIC -->
            <div class="profile-userpic">
                <img src="https://fbcdn-sphotos-e-a.akamaihd.net/hphotos-ak-xpf1/v/t1.0-9/11904075_916925115045782_4850680110929056078_n.jpg?oh=bbd28535d054c09ff5da7b7ee24acd2c&oe=569B530A&__gda__=1456518752_e898b1ebe58bf411e2e93b17384e6892" class="img-responsive" alt="">
            </div>
            <!-- END SIDEBAR USERPIC -->
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
                <a asp-controller="Account" class="title profile-name">
                    Guiu
                </a>
                <div class="text profile-username">
                    Guiu
                </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR MENU -->
            <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li>
                            <a href="@Url.Content("~/Receita/Lista")">
                                <i class="icon fa fa-star"></i>
                                Receitas Favoritas
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon fa fa-trophy"></i>
                                Receitas que já fiz
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon fa fa-cutlery"></i>
                                Receitas que quero fazer
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="icon fa fa-cog"></i>
                                Configurações
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("LogOff", "Account")">
                                <i class="icon fa fa-power-off"></i>
                                Sair
                            </a>

                        </li>
                    </ul>
                </div>
            </form>
            <!-- END MENU -->
        </div>
    </aside>

    <div id="wrapper">
        <div class="container body-content">
            @RenderBody()
            <hr />

        </div>
    </div>
    <footer class="text-center">
        <p>&copy; 2015 - Cozinhow</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
